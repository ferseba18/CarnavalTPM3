<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.TransactionActivity">

    <LinearLayout
        android:id="@+id/contenedorNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10sp">

        <TextView
            android:id="@+id/titulo_puntos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tus Puntos Son:"
            android:textAlignment="textStart"
            android:textColor="#0B0909"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/totalPuntos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:text="200"
            android:textAlignment="viewEnd"
            android:textColor="#D10606"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="serif" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/contenedorNav">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listadoDePuntos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>





    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>